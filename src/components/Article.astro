---
import { Icon } from 'astro-icon/components'
interface Props {
  title: string;
  paragraph: string;
  img: { src: string; width: number };
  alt: string;
}
const { title="default title", paragraph="Defauld paragraph", img, alt } = Astro.props;
---
<div class="post | d-flex">
    <div>
      <img
        src={img.src}
        width={img.width / 2}
        alt={alt}
        />
        </div>
      <h3>{title}</h3>
      <div class="post__icons | d-flex">
        <div class="post__icon">
            <Icon name="calendar_clock" />
            <time>25 Dec 2024</time>
        </div>
        <div class="d-flex">
          <div class="post__icon">
              <Icon name="favorite" />
              <span>40.7k</span>
          </div>
          <div class="post__icon">
              <Icon name="forum" />
              <span>15.2k</span>
          </div>
        </div>

      <p>{paragraph}</p>
      </div>
    
  </div>